.PHONY:		$(NAME) all clean fclean re

NAME	=	test_suite
FLAGS	=	-Wall -Werror -Wextra -o $(NAME) -ltest -L. -lft -L$(PATH) -I$(PATH)
SOURCES	=	test_libft.c \
			test_libft_mine.c \
			test_libft_bonus.c \
			test_libft_2.c \
			test_libft_1.c

all:	$(NAME)

$(NAME):
			gcc $(FLAGS) $(SOURCES) 

clean:
			echo "noop"

fclean:		clean
			rm -f $(NAME)

re: 		fclean all
